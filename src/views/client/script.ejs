<script>
    const handleExpand = (Event) => {
        let expandElement = document.querySelector('.specialty-expand');
        event.preventDefault();
        expandElement.classList.remove('expand-hide');
        expandElement.classList.add('expand-active');
    }

    const handleExpandHide = (Event) => {
        let expandElement = document.querySelector('.specialty-expand');
        event.preventDefault();
        expandElement.classList.remove('expand-active');
        expandElement.classList.add('expand-hide');
    }

    const handleHidePriceTable = (Event) => {
        const schedulePriceTable = document.querySelector('.schedule-price-table');
        const schedulePriceTableHideBtn = document.querySelector('.schedule-price-table-hide-btn');
        const schedulePriceTableShowBtn = document.querySelector('.schedule-price-table-show-btn');
        const schedulePriceInshort = document.querySelector('.schedule-price-inshort');
        event.preventDefault();
        
        schedulePriceTable.style.display = 'none';
        
        schedulePriceTableHideBtn.style.display = 'none';
        
        schedulePriceTableShowBtn.style.display = 'inline-block';

        schedulePriceInshort.style.display = 'inline-block';
        // priceTable.classList.remove('price-table-hide');
        // priceTable.classList.add('price-table-active');
    }
    
    const handleShowPriceTable = (Event) => {
        const schedulePriceTable = document.querySelector('.schedule-price-table');
        const schedulePriceTableHideBtn = document.querySelector('.schedule-price-table-hide-btn');
        const schedulePriceTableShowBtn = document.querySelector('.schedule-price-table-show-btn');
        const schedulePriceInshort = document.querySelector('.schedule-price-inshort');
        event.preventDefault();
        
        schedulePriceTable.style.display = 'block';
        
        schedulePriceTableHideBtn.style.display = 'block';
        
        schedulePriceTableShowBtn.style.display = 'none';

        schedulePriceInshort.style.display = 'none';
    }
</script>