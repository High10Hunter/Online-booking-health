/>

<div class="banner-wrap">
	<div
		style="
			background-image: url('./client/assets/images/svg/banner-bg.svg');
		"
		class="banner-bg"
	>
		<div class="banner-intro-image-wrap">
			<div class="banner-bg__intro">
				<div class="banner-bg__descri">
					<h1 class="descri__title">
						Đặt lịch hẹn với bác sĩ dễ dàng
					</h1>
					<div class="descri__text">
						<p>
							Đơn giản hóa việc tìm kiếm bác sĩ và đặt lịch khám
						</p>
					</div>

					<div
						class="descri__btn-booking"
						onclick="openNewBookingPage()"
					>
						<!-- redirect to doctor list page -->
						<a href="/free-doctors">
							<button class="btn-booking btn">
								Đặt lịch ngay
							</button>
						</a>
					</div>
				</div>

				<div class="banner-bg-btn">
					<button></button>
				</div>
			</div>

			<div class="banner-bg-doctor-wrap">
				<img
					class="banner-bg-doctor-img"
					src="./client/assets/images/banner_doctor.png"
					alt="QTN clinic"
				/>
			</div>
		</div>
	</div>
</div>

<div class="content-segment-wrap">
	<div class="content-segment-margin">
		<div class="content-segment">
			<div class="content-segment-header">
				<h2 class="content-segment-title">Các chuyên khoa</h2>
			</div>
			<div class="specialtiy-slider">
				<% if (specialities.length > 0) { %> <%
				specialities.forEach((speciality) => { %>
				<a
					href="/doctors?page=1&speciality_id=<%= speciality.id %>"
					class="specialtiy-slide"
				>
					<div class="specialtiy-image">
						<img src="<%= speciality.image %>" />
					</div>
					<h3 class="specialtiy-slide-title">
						<%= speciality.name %>
					</h3>
				</a>

				<% }) %> <% } %>
			</div>
		</div>
	</div>
</div>

