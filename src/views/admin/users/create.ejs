<style>

    .container {
        width: 80vw;
        height: 80vh;
        background-color: white;
        padding: 30px;
        border: 1px solid #ccc;
        border-radius: 10px;

        overflow: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-flow: column nowrap;

        position: relative;
        top: 2px;
    }

    #add-user-form {
        width: 65vw;
    }

    h1 {
        top: -20vh;
        font-family: SFProDisplay-Bold, Helvetica, Arial, sans-serif;
        text-align: center;
        margin-bottom: 60px;
    }

    label {
        display: inline-block;
        margin-bottom: 10px;
        font-weight: bold;
        font-size: 20px;
    }

    input[type="text"], input[type="email"], input[type="date"], input[type="number"], select{
        width: 90%;
        height: 42px;
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    input[type="radio"] {
        width: 25px;
        height: 25px;
        position: relative; 
        margin-right: 10px;
        left: 10px;
        bottom: -6px;
    }

    .radioText {
        margin-right: 40px;
        font-weight: normal;
        font-size: 16px;
        position: relative; 
        left: 24px;
    }

    .gender{
        width:120px;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 8px;
        position: relative;
        height: 42px;
        bottom: 1px;
    }

    span.error {
        width: 90%;
        color: red;
        font-size: 12px;
        
    }

    button[type="submit"], button[type="reset"] {
        display: block;
        padding: 10px;
        margin-left: 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        position: relative;
        top: 24px;
    }
    button[type="reset"] {
        background-color: #f44336;
        color: black;
        margin-right: 10px;
    }
    #additional-fields {
        margin-top: 30px;
    }

</style>


<div class="container">
    <h1>Thêm người dùng</h1>
    <form id="add-user-form" action="/admin/users/create" method="POST">
        <div class="row">
            <div class="col-6">
                <label for="name">Họ tên:</label>
                <span class="error" id="name-error"></span>
                <input type="text" id="name" name="name" placeholder="Họ và tên">
            </div>
            <div class="col-6">
                <label for="gender">Giới tính:</label>
                <span class="error" id="gender-error"></span>
                <br/>
                <div class="gender">
                    <input type="radio" id="male" name="gender" value="male">
                    <label class="radioText" for="male">Nam</label>
                </div>

                <div class="gender">
                    <input type="radio" id="female" name="gender" value="female">
                    <label class="radioText" for="female">Nữ</label>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <label for="phone">Số điện thoại:</label>
                <span class="error" id="phone-error"></span>
                <input type="number" id="phone" name="phone_number" placeholder="Số điện thoại">
            </div>
            <div class="col-6">
                <label for="email">Email:</label>
                <span class="error" id="email-error"></span>
                </br>
                <input type="email" id="email" name="email" placeholder="email@example.com">
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <label for="dob">Ngày sinh:</label>
                <span class="error" id="dob-error"></span>
                <input type="date" id="dob" name="birthday">
            </div>
            <div class="col-6">
                <label for="role">Vai trò:</label>
                <span class="error" id="role-error"></span>
                <select id="role" name="role">
                    <option value="">--  Chọn Vai trò  --</option>
                    <option value="1">Quản trị viên</option>
                    <option value="2">Y tá</option>
                    <option value="3">Bác sĩ</option>
                </select>
            </div>
        </div>

        <div id="additional-fields" style="display: none;">
            <div class="row">
                <div class="col-4">
                <label for="specialty">Chuyên khoa:</label>
                <span class="error" id="specialty-error"></span>
                <select id="specialty" name="specialty">
                    <option value="">--  Chọn chuyên khoa  --</option>
                    <option value="1">Cơ xương khớp</option>
                    <option value="2">Thần kinh</option>
                    <option value="3">Tiêu hóa</option>
                    <option value="4">Tim mạch</option>
                    <option value="5">Tai mũi họng</option>
                    <option value="6">Y học cổ truyền</option>
                    <option value="7">Sản phụ khoa</option>
                    <option value="8">Da liễu</option>
                    <option value="9">Nội tiết</option>
                    <option value="10">Hô hấp</option>
                    <option value="11">Bệnh nhi</option>
                </select>
                </div>
                <div class="col-4">
                <label for="position">Chức danh:</label>
                <span class="error" id="position-error"></span>
                <select id="rank" name="rank">
                    <option value="">--  Chọn chức danh  --</option>
                    <option value="1">Trưởng khoa</option>
                    <option value="2">Phó khoa</option>
                    <option value="3">Bác sĩ chính</option>
                    <option value="4">Bác sĩ</option>
                </select>
                </div>
                <div class="col-4">
                    <label for="fee">Giá khám:</label>
                    <span class="error" id="fee-error"></span>
                    <input type="number" id="fee" name="price" placeholder="Giá khám">
                    </div>
            </div>
            <div class="row">

                <div class="col-12">
                <label for="description">Mô tả:</label>
                <span class="error" id="description-error"></span>
                <!-- <input type="textarea" id="description" style="width: 100%; height: 4em;" name="description" placeholder="Mô tả"> -->
                <textarea name="description" id="description" rows="4" style="width: 100%;" placeholder="Mô tả"></textarea>    
                </div>
            </div>
        </div>

        <div class="row" style="display: flex; justify-content: center; align-items: center;">
            <button type="reset">Reset</button>
            <button type="submit">Tạo người dùng</button>
        </div>

    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script>		

        const form = document.getElementById('add-user-form');
        const name = document.getElementById('name');
        const gender = document.getElementsByName('gender');
        const dob = document.getElementById('dob');
        const phone = document.getElementById('phone');
        const email = document.getElementById('email');
        const role = document.getElementById('role');
        const status = document.getElementsByName('status');

        const roleSelect = document.getElementById("role");
        const additionalFields = document.getElementById("additional-fields");

        document.getElementById("role").addEventListener('change', function() {
            if(this.value === "3") {
                additionalFields.style.display = "block";
                additionalFields.style.borderTop = "1px solid #ccc";
                additionalFields.style.paddingTop = "20px";
            } else {
                additionalFields.style.display = "none";
                additionalFields.style.borderTop = "none";
                additionalFields.style.paddingTop = "0";
            }
        });

    
        form.addEventListener('submit', (e) => {
            e.preventDefault();
    
            let valid = true;
    
            if (name.value === '') {
                valid = false;
                document.getElementById('name-error').textContent = 'Vui lòng nhập tên người dùng';
            } else {
                document.getElementById('name-error').textContent = '';
            }
    
            let selectedGender = '';
            for (let i = 0; i < gender.length; i++) {
                if (gender[i].checked) {
                    selectedGender = gender[i].value;
                }
            }
            if (selectedGender === '') {
                valid = false;
                document.getElementById('gender-error').textContent = 'Vui lòng chọn giới tính';
            } else {
                document.getElementById('gender-error').textContent = '';
            }
    
            if (dob.value === '') {
                valid = false;
                document.getElementById('dob-error').textContent = 'Vui lòng nhập ngày sinh';
            } else {
                document.getElementById('dob-error').textContent = '';
            }
    
            if (phone.value === '' || phone.value.length < 10) {
                valid = false;
                document.getElementById('phone-error').textContent = 'Số điện thoại không hợp lệ';
            } else {
                document.getElementById('phone-error').textContent = '';
            }
    
            if (email.value === '' || !email.checkValidity()) {
                valid = false;
                document.getElementById('email-error').textContent = 'Địa chỉ email không hợp lệ';
            } else {
                document.getElementById('email-error').textContent = '';
            }
    
            if (role.value === '') {
                valid = false;
                document.getElementById('role-error').textContent = 'Vui lòng chọn vai trò';
            } else {
                document.getElementById('role-error').textContent = '';
            }
    
            if(role.value === "3") {
                if (document.getElementById('specialty').value === '') {
                    valid = false;
                    document.getElementById('specialty-error').textContent = 'Vui lòng nhập chuyên khoa';
                } else {
                    document.getElementById('specialty-error').textContent = '';
                }
    
                if (document.getElementById('position').value === '') {
                    valid = false;
                    document.getElementById('position-error').textContent = 'Vui lòng nhập chức vụ';
                } else {
                    document.getElementById('position-error').textContent = '';
                }
    
                if (document.getElementById('fee').value === '') {
                    valid = false;
                    document.getElementById('fee-error').textContent = 'Vui lòng nhập giá khám';
                } else {
                    document.getElementById('fee-error').textContent = '';
                }
    
                if (document.getElementById('description').value === '') {
                    valid = false;
                    document.getElementById('description-error').textContent = 'Vui lòng nhập mô tả';
                } else {
                    document.getElementById('description-error').textContent = '';
                }
            }
    
            if (valid) {
                form.submit();
            }
        });
        form.addEventListener('reset', (e) =>{
            e.preventDefault;
            document.querySelectorAll('.error').forEach((item) => item.textContent = '');
        })
    </script>
    